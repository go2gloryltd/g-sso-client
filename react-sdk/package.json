{
  "name": "@g2gdao/react-sdk",
  "version": "1.0.0",
  "description": "G2GDAO Multi-Chain Authentication SDK for React",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run build:ts && npm run build:css",
