  "license": "MIT",
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "dependencies": {
    "ethers": "^6.15.0",
    "lucide-react": "^0.263.1",
    "qrcode.react": "^4.2.0"
  },
  "devDependencies": {
    "@types/qrcode.react": "^1.0.5",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "typescript": "^5.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/g2gdao/sdk"
  }
