# G2GDAO React SDK Configuration
# Copy this to .env and fill in your values

# ============================================================================
# REQUIRED: API Configuration
# ============================================================================
REACT_APP_G2G_API_URL=http://localhost:3001
# or for Vite projects:
VITE_G2G_API_URL=http://localhost:3001

# ============================================================================
# REQUIRED: Client Credentials
# ============================================================================
REACT_APP_G2G_CLIENT_ID=cls_your_client_id
REACT_APP_G2G_CLIENT_SECRET=your_client_secret

# or for Vite:
VITE_G2G_CLIENT_ID=cls_your_client_id
VITE_G2G_CLIENT_SECRET=your_client_secret

# ============================================================================
# OPTIONAL: OAuth Configuration
# ============================================================================
# Redirect URI for OAuth flow (only needed if using 'redirect' flow)
REACT_APP_G2G_REDIRECT_URI=http://localhost:3000/callback
# VITE_G2G_REDIRECT_URI=http://localhost:3000/callback
# ============================================================================
# OPTIONAL: Authentication Flow
# ============================================================================
# Options: 'popup' | 'redirect' (default: 'popup')
REACT_APP_G2G_FLOW=popup
# VITE_G2G_FLOW=popup

# ============================================================================
# OPTIONAL: Smart Contract Addresses
# ============================================================================
REACT_APP_G2G_MAINNET_CONTRACT=
REACT_APP_G2G_POLYGON_CONTRACT=
REACT_APP_G2G_ENS_NAME=

# or for Vite:
VITE_G2G_MAINNET_CONTRACT=
VITE_G2G_POLYGON_CONTRACT=
VITE_G2G_ENS_NAME=

# ============================================================================
# OPTIONAL: Session Configuration
# ============================================================================
# Storage type: 'localStorage' | 'sessionStorage' (default: 'localStorage')
REACT_APP_G2G_SESSION_PERSISTENCE=localStorage
# VITE_G2G_SESSION_PERSISTENCE=localStorage

# Storage key for session data
REACT_APP_G2G_STORAGE_KEY=g2gdao_multichain_sso_token
# VITE_G2G_STORAGE_KEY=g2gdao_multichain_sso_token

# ============================================================================
# OPTIONAL: Supported Chains
# ============================================================================
# Comma-separated list of chains
REACT_APP_G2G_CHAINS=ethereum,solana,bitcoin,polkadot,cardano
# VITE_G2G_CHAINS=ethereum,solana,bitcoin,polkadot,cardano

# ============================================================================
# OPTIONAL: Debug Mode
# ============================================================================
REACT_APP_G2G_DEBUG=false
# VITE_G2G_DEBUG=false